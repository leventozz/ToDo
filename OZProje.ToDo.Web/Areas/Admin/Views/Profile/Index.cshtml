@model AppUserListDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show mt-2" role="alert">
        @TempData["message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Index" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label asp-for="@Model.Name">Ad: </label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Surname">Soyad: </label>
        <span asp-validation-for="@Model.Surname" class="text-danger"></span>
        <input asp-for="@Model.Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email">Email: </label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <div class="row">
            <div class="col-md-4">
                <div>
                    <h5>Şu an ki avatarınız:</h5>
                    <img src="~/img/@Model.Picture" style="height:10rem!important;" alt="@Model.Name" />
                </div>
            </div>
            <div class="col-md-2">

            </div>
            <div class="col-md-4">
                <div id="divPreview" style="display:none!important">
                    <h5>Seçtiğiniz avatar:</h5>
                    <img id="picturePreview" src="" style="height:10rem!important;" />
                </div>
            </div>
            <div class="col-md-12">
                <label>Resim Seç: </label>
                <input type="file" class="form-control-file" name="namePicture" id="picture"/>
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info btn-sm">Kaydet</button>
    </div>
</form>

@section JavaScript{ 

<script type="text/javascript">
    $(document).ready(function () {
        $("#picture").change(function (e) {
            $("#divPreview").show();
            $("#picturePreview").attr('src', (URL.createObjectURL(e.target.files[0])))
        });
    });
</script>

}