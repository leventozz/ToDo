@model TaskListAllDto
@{
    ViewData["Title"] = "ViewDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Reports.Count > 0)
{
    <a asp-action="ExcelExport" asp-route-id="@Model.Id" target="_blank" class="btn btn-info mt-2">Excel Export</a> 
    <a asp-action="PDFExport" asp-route-id="@Model.Id" target="_blank"class="btn btn-info mt-2">PDF Export</a>
    <table class="table table-hover table-sm mt-2 text-center table-bordered mt-1">
        <tr>
            <th colspan="2">@Model.AppUser.Name @Model.AppUser.Surname personelinin @Model.Name taskına yazmış olduğu raporlar</th>
        </tr>
        <tr>
            <th>Tanım</th>
            <th>Detay</th>
        </tr>
        @foreach (var report in Model.Reports)
        {
            <tr>
                <td>@report.Title</td>
                <td>@report.Description</td>
            </tr>
        }
    </table>
}
else
{
    <div class="border border-danger mt-2 text-center">
        @Model.AppUser.Name @Model.AppUser.Surname bu task için henüz rapor yazmamıştır.
    </div>
}

