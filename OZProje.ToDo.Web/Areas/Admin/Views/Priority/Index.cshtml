@model List<PriorityListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count != 0)
{
    <a asp-action="AddPriority" asp-controller="Priority" class="btn btn-sm btn-info my-2">Yeni Önem Sırası Ekle</a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Tanım</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td> @item.Definition</td>
                <td> <a asp-action="UpdatePriority" asp-controller="Priority" asp-route-id="@item.Id" class="btn btn-info btn-warning btn-sm">Düzenle</a></td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
<div class="text-center mt-4">
    <p class="lead">
        Sistemde kayıtlı önem sırası bulunamadı.
    </p>
    <a asp-action="AddPriority" asp-controller="Priority" class="btn btn-sm btn-info my-2">Yeni Önem Sırası Ekle</a>
</div>
}
