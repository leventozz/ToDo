@model ReportAddViewModel
@{
    ViewData["Title"] = "AddReport";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<form method="post" asp-action="AddReport" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="TaskId" />
    <div class="form-group">
        <label asp-for="@Model.Title"></label>
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
        <input asp-for="@Model.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description"></label>
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
        <textarea asp-for="@Model.Description" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info btn-sm">Kaydet</button>
    </div>
</form>

@section JavaScript
{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}
