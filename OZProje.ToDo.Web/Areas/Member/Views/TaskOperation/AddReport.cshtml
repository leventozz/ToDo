@model ReportAddDto
@{
    ViewData["Title"] = "AddReport";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<form method="post" asp-action="AddReport" class="w-75 mx-auto p-3">
    <div class="card border-warning mb-3">
        <div class="lead">
            <div class="card-header">
                <h4 class="card-title text-center">@Model.Task.Name</h4>
            </div>
            
            <div class="card-body">
                <p class="card-text">
                    <span class="text-danger">Detayı: </span>@Model.Task.Description
                </p>
                <p class="card-text">
                    <span class="text-danger">Önem Sırası: </span>@Model.Task.Priority.Definition
                </p>
            </div>
        </div>
    </div>
    <input type="hidden" asp-for="TaskId" />
    <div class="form-group">
        <label asp-for="@Model.Title">Başlık: </label>
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
        <input asp-for="@Model.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description">Açıklama: </label>
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
        <textarea asp-for="@Model.Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <a asp-action="Index" class="btn btn-warning btn-sm"><i class="fas fa-chevron-circle-left mr-1"></i>Geri Dön</a>

        <button type="submit" class="btn btn-info btn-sm ml-1">Kaydet</button>
    </div>
</form>

@section JavaScript
{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}
